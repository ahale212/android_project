<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.alert.CreateUser" 
    android:background="@drawable/overall_background">

    <TextView 
        android:id="@+id/User_userDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text="User"
        android:textSize="20dp"
        android:paddingLeft="10dp"
        android:textColor="#000000"/>
    
    <EditText
        android:id="@+id/User_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Username" 
        android:background="@drawable/layout_border"
        android:paddingLeft="10dp"/>

    <EditText
        android:id="@+id/User_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Name" 
        android:background="@drawable/layout_border"
        android:paddingLeft="10dp"/>

    <EditText
        android:id="@+id/User_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="Password" 
        android:background="@drawable/layout_border"
        android:paddingLeft="10dp"/>

    <EditText
        android:id="@+id/User_confirmPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="Confirm Password" 
        android:background="@drawable/layout_border"
        android:paddingLeft="10dp"/>
	
    <TextView 
        android:id="@+id/User_HospitalDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text="Hospital"
        android:textSize="20dp"
        android:paddingLeft="10dp"
        android:textColor="#000000"/> 
    
    <EditText
        android:id="@+id/User_HospitalNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="number" 
        android:hint="Hospital Phone Number"
        android:background="@drawable/layout_border"
        android:paddingLeft="10dp"/>

    <EditText
        android:id="@+id/User_HospitalEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="Hospital Email Address" 
        android:background="@drawable/layout_border"
        android:paddingLeft="10dp"/>
   
</LinearLayout>
