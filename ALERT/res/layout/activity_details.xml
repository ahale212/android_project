<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.alert.Details" >

    

    <TextView
        android:id="@+id/textViewDetails"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="1dp"
        android:paddingTop="1dp"
        android:text="@+string/Details"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/editTextTitle"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:inputType="text"
        android:layout_alignBaseline="@+id/textViewTitle"
        android:layout_alignBottom="@+id/textViewTitle"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:maxLength="4"
        android:ems="10" />

    <EditText
        android:id="@+id/editTextFirstName"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/editTextTitle"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:inputType="textPersonName"
        android:layout_alignBaseline="@+id/textViewFirstName"
        android:maxLength="10"
        android:layout_marginBottom="30dp"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/buttonNoDetails"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_alignRight="@+id/textViewSurname"
        android:layout_alignTop="@+id/buttonSearch"
        android:layout_marginBottom="0dp"
        android:text="No Details" />

    <Button
        android:id="@+id/buttonSearch"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/editTextFirstName"
        android:layout_marginBottom="0dp"
        android:text="@+string/Search" />

    <EditText
        android:id="@+id/editTextSurname"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/editTextDOB"
        android:layout_alignTop="@+id/textViewSurname"
        android:ems="10"
        android:inputType="textPersonName"
        android:maxLength="10" />

    <Button
        android:id="@+id/buttonSubmit"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_above="@+id/buttonSearch"
        android:layout_alignLeft="@+id/buttonSearch"
        android:text="Submit" />

    <TextView
        android:id="@+id/textViewDOB"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonSubmit"
        android:layout_alignLeft="@+id/textViewSurname"
        android:layout_marginBottom="60dp"
        android:text="@+string/DOB" />

    <EditText
        android:id="@+id/editTextDOB"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/textViewDOB"
        android:layout_alignBottom="@+id/textViewDOB"
        android:layout_alignRight="@+id/buttonSubmit"
        android:ems="10"
        android:inputType="date"
        android:maxLength="10" />

    <TextView
        android:id="@+id/textViewSurname"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/editTextDOB"
        android:text="@+string/Surname" />

    <TextView
        android:id="@+id/textViewFirstName"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textViewSurname"
        android:layout_alignRight="@+id/textViewNHSNum"
        android:layout_marginBottom="16dp"
        android:text="@+string/FirstName" />

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textViewFirstName"
        android:layout_alignLeft="@+id/textViewFirstName"
        android:layout_marginBottom="20dp"
        android:text="@+string/Title" />

    <TextView
        android:id="@+id/textViewAllergies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewSurname"
        android:layout_below="@+id/textViewMedicalHistory"
        android:layout_marginTop="19dp"
        android:text="Allergies"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textViewMedicalHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewDetails"
        android:layout_marginTop="23dp"
        android:layout_toLeftOf="@+id/editTextTitle"
        android:text="Medical History"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textViewNHSNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textViewDetails"
        android:text="NHS Number"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/editTextNHSNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewNHSNum"
        android:layout_alignBottom="@+id/textViewNHSNum"
        android:layout_alignParentRight="true"
        android:ems="10" />

    <EditText
        android:id="@+id/editTextAllergies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewAllergies"
        android:layout_alignBottom="@+id/textViewAllergies"
        android:layout_alignParentRight="true"
        android:ems="10" />

    <EditText
        android:id="@+id/editTextMedicalHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textViewAllergies"
        android:layout_alignParentRight="true"
        android:ems="10" />

</RelativeLayout>